{
  "name": "subtitles-ssa",
  "version": "1.0.1",
  "description": "A tool for parsing and writing SSA/AegiSub subtitles",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "cover": "istanbul cover node_modules/mocha/bin/_mocha test/*.js - - -R spec",
    "ci": "npm run lint && npm run build && npm run cover",
    "docs": "typedoc --out docs src",
    "gh-pages": "rimraf docs && npm run docs && gh-pages -d docs",
    "lint": "tslint --project \"./tsconfig.json\"",
    "test": "mocha --reporter spec"
  },
  "keywords": [
    "subtitles",
    "ssa",
    "aegisub",
    "substation",
    "substationalpha"
  ],
  "author": "padraigf (https://github.com/padraigfl)",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/istanbul": "^0.4.30",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "gh-pages": "^2.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.3"
  },
  "pre-commit": [
    "test",
    "lint"
  ],
  "dependencies": {
    "pre-commit": "^1.2.2"
  }
}
